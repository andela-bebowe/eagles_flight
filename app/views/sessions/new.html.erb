<%provide(:title, 'Log In')%>
<div class="row">
    <h2>Log In</h2>
    <%= form_for :session, url: login_path do |f|%>
     <div class="row">
        <div class="input-field col s12">
        <%= f.label :email%>
        <%= f.email_field :email, placeholder: "Enter email" , class: "validate", html: { data-error="Incorrect!!!" data-success="Nice!" }%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.label :password%>
        <%= f.password_field :password, placeholder: "Enter password" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="col s6">
          <button class="btn waves-effect waves-light">
            <%= link_to "Log In", login_path%>
            <i class="material-icons right">send</i>
          </button>
        </div>
        <div class="col s6">
          <button class: "btn waves-effect waves-light">
           <%= f.submit "Submit"%>
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    <% end %>
</div>
