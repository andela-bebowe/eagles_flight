<%provide(:title, "Log In")%>
<h4 class="center-align">Log In</h4>
<div class="row form-wrapper">
    <%= form_for :session, url: login_path , class: "col s12" do |f|%>
     <div class="row">
        <div class="input-field col s12">
        <%= f.label :email%>
        <%= f.email_field :email, placeholder: "Enter email" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.label :password%>
        <%= f.password_field :password, placeholder: "Enter password" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="col s6 offset-s2">
            <%= link_to "Log In", login_path, class: " btn btn-large waves-effect waves-light"%>
        </div>
        <div class="col s3">
           <%= link_to "Sign Up", signup_path, class: " btn btn-large waves-effect waves-light"%>
        </div>
      </div>
    <% end %>
</div>
