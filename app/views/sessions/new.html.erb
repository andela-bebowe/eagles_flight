<%provide(:title, 'Log In')%>
<div class="row form-wrapper">
    <h2>Log In</h2>
    <%= form_for :session, url: login_path , class: "col s12" do |f|%>
     <div class="row">
        <div class="input-field col s12">
        <%= f.label :email%>
        <%= f.email_field :email, placeholder: "Enter email" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.label :password%>
        <%= f.password_field :password, placeholder: "Enter password" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="col s6 offset-s2">
          <button class="btn-large waves-effect waves-light">
            <%= link_to "Log In", login_path%>
          </button>
        </div>
        <div class="col s3">
          <button class="btn-large waves-effect waves-light">
           <%= link_to "Sign_up", signup_path%>
          </button>
        </div>
      </div>
    <% end %>
</div>
