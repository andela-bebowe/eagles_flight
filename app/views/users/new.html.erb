<%provide(:title, 'Sign Up')%>
<div class="row form-wrapper">
  <%= form_for @user do |f|%>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name, "Full Name"%>
          <%= f.text_field :name, placeholder: "Enter name" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email, "Email"%>
          <%= f.email_field :email, placeholder: "Enter email" , class: "validate"%>
        </div>
      </div>
        <div class="row">
        <div class="input-field col s12">
          <%= f.label :password, "Password"%>
          <%= f.password_field :password, placeholder: "Enter password" , class: "validate"%>
        </div>
        </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation, "Confirm Password"%>
          <%= f.password_field :password_confirmation, placeholder: "Enter password" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="col s6 offset-s2">
          <button class="waves-effect waves-light btn-large">
           <%= f.submit "Submit"%>
          </button>
        </div>
        <div class="col s3">
          <button class="waves-effect waves-light btn-large">
            <%= link_to "Log In", login_path%>
          </button>
        </div>
      </div>
  <%end%>
</div>
