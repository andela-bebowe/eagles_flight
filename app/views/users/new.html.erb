<%provide(:title, 'Sign Up')%>
<div class="row form-wrapper">
  <%= form_for @user do |f|%>
      <div class="row">
        <div class="input-field col l6 s12 offset-l3">
          <%= f.label :name, "Full Name"%>
          <%= f.text_field :name, placeholder: "Enter name" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l6 s12 offset-l3">
          <%= f.label :email, "Email"%>
          <%= f.email_field :email, placeholder: "Enter email" , class: "validate"%>
        </div>
      </div>
        <div class="row">
          <div class="input-field col l6 s12 offset-l3">
            <%= f.label :password, "Password"%>
            <%= f.password_field :password, placeholder: "Enter password" , class: "validate"%>
          </div>
        </div>
      <div class="row">
        <div class="input-field col l6 s12 offset-l3">
          <%= f.label :password_confirmation, "Confirm Password"%>
          <%= f.password_field :password_confirmation, placeholder: "Enter password" , class: "validate"%>
        </div>
      </div>
      <div class="row">
        <div class="col s3 offset-l4 l2">
           <button type="submit" class="btn waves-light waves-effect">Submit</button>
        </div>
        <div class="col s3 l2">
            <%= link_to "Log In", login_path, class: "btn waves-effect waves-light"%>
        </div>
      </div>
  <%end%>
</div>
